<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".Inicio">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorSecondary"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/foto_round"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="130dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_habilitacoes"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/colorBotao"
                android:text="@string/titulo_habilitacoes"
                android:textSize="10dp"
                />

            <Button
                android:id="@+id/btn_cronologia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/colorBotao"
                android:text="@string/titulo_cronologia"
                android:textSize="10dp"
                />

            <Button
                android:id="@+id/btn_interesses"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/colorBotao"
                android:text="@string/titulo_interesses"
                android:textSize="10dp"

                />

            <Button
                android:id="@+id/btn_deondevenho"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@drawable/deondevenho_mini"
                android:layout_gravity="center"
                android:background="@color/colorBotao"
                />

        </LinearLayout>

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/botao_round"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedro Mata Rodrigues"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engenharia InformÃ¡tica"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="120dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:layout_width="450dp"
                android:layout_height="200dp"
                android:src="@drawable/background"
                android:layout_marginTop="180dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btn_sobremim"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="195dp"
                android:gravity="center"
                android:background="@drawable/botao_degrade"
                android:layout_centerHorizontal="true"
                android:text="@string/titulo_sobre_mim"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>