<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:orientation="vertical"
    android:background="@drawable/background_popups"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/fechar_popup_comida"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textAlignment="center"
        android:paddingTop="11dp"
        android:background="@color/colorPrimaryDark"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/interesses_pic_francesinha"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="Comida"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Quem não gosta de comer?
Sendo uma das minhas atividades preferidas, as refeições são sempre as melhores fases do dia.
Os meus pratos preferidos são Coelho estufado e Fracnesinha Especial."
        android:textColor="@android:color/white"
        android:textSize="12dp"
        />

</LinearLayout>