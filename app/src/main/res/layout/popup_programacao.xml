<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:orientation="vertical"
    android:background="@drawable/background_popups"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/fechar_popup_programacao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textAlignment="center"
        android:paddingTop="11dp"
        android:background="@color/colorPrimaryDark"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/interesses_pic_programacao"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="Computador"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Sou desde criança um apaixonado pelos computadores e todo o tipo de equipamentos eletrónicos.
Sempre gostei de perceber o funcionamento de tudo em que mexia, chegando até a desmontar e, infelizmente, estragar muitos equipamentos."
        android:textColor="@android:color/white"
        android:textSize="12dp"
        />

</LinearLayout>