<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreMim"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorSecondary"
            />

        <View
            android:layout_width="500dp"
            android:layout_height="480dp"
            android:layout_marginTop="340dp"
            android:layout_centerHorizontal="true"
            android:background="#1F2939 "
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_botao_round"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sobre mim"
                        android:textColor="@android:color/black"
                        android:textAllCaps="true"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingBottom="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nasci em Guimarães em Dezembro de 1997.
Gosto de estar atualizado em relação à atualidade, tanto a nível nacional como internacional. \n
Sou um fã de humor e standup comedy, tendo já criado duas páginas relacionadas com o tema nas redes sociais, ambas com dezenas de milhares de seguidores."
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/btn_linkedin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:text="Linkedin"
                            android:textColor="@android:color/white"
                            android:background="@drawable/background_gradient"
                            android:onClick="abrirLink"
                            />

                        <Button
                            android:id="@+id/btn_github"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:text="Github"
                            android:textColor="@android:color/white"
                            android:background="@drawable/background_botao_degrade"
                            android:onClick="abrirLink"
                            />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Galeria"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/cinzaClaro"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/galeria_pic_um"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/interesses_pic_vitoria"
                                android:scaleType="centerCrop"
                                android:onClick="showPopup"
                                />

                            <ImageView
                                android:id="@+id/galeria_pic_dois"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:src="@drawable/interesses_pic_viajar"
                                android:scaleType="centerCrop"
                                android:onClick="showPopup"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/galeria_pic_tres"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:scaleType="center"
                                android:background="@drawable/pic_eu"
                                android:onClick="showPopup"
                                />

                            <ImageView
                                android:id="@+id/galeria_pic_quatro"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/pic_eu_dois"
                                android:onClick="showPopup"
                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

    </RelativeLayout>
</ScrollView>